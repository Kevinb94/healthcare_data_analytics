{
  "name": "SQLMesh Dev Container",
  "dockerComposeFile": "../../docker-compose.yml",
  "service": "sqlmesh",
  "workspaceFolder": "/app/sqlmesh",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "workbench.colorCustomizations": {
          "activityBar.background": "#148162"
        }
      }
    }
  },
  "postCreateCommand": "apt-get update && apt-get install -y curl nano"
}
